<div id="wrapper" class="quick-sign-up">        
	<div id="cap-top" class="container"></div>
	<div id="header" class="container">
		<div class="inner">
			 <img id="imgLogo" src="/images/super.jpg" />
		        </div>
	        </div>
	        <div id="cap-body" class="container">	       	        
	        
	            <div id="panelSteps">
		 
	                <div id="steps" class="column span-6">
			            
			        </div>
	</div> 
		        <div id="content" class="column prepend-1 span-16 append-1 last">
		        
		            <div id="panelStyle1" class="inner">
		    		        <br>		
    		        		<h1></h1>
                         
							<% form_for :user, :url => {:action => 'process_sponsor_registration'} do |f| -%>
             				<table class="default" border="0">
							<tbody>
							     <tr><td colspan="2" class="heading"><h2>Create Sponsor Account</h2></td></tr>
							     <tr><td class="var"><label>Login</label></td><td><%= f.text_field :login, :class => "textbox340" %> </td>
									  <td class="register-error-message">
								           <% if @user.errors[:login] %>
								             <% if @user.errors[:login][0] == 104 %>
								               Login not available - please choose a different login.
								              <% else %>
								                Login <%= @user.errors[:login][0] %>
								              <% end %>
								           <% end %>     
								         </td> 
								</tr>
							     <tr><td class="var"><label>Email</label></td><td><%= f.text_field :email, :class => "textbox340" %></td>
									  <td class="register-error-message">
	                       		<% if @user.errors[:email] %>
	                     				Email Address <%= @user.errors[:email][0] %>
	                     				<% end %>
	                     		</td>
								 </tr>
							     <tr><td class="var"><label>Password</label></td><td><%= f.password_field :password, :class => "textbox340" %></td>
									 <td class="register-error-message">
	                    		 <% if @user.errors[:password] %>
								             <% if @user.errors[:password][0] == 100 %>
	                             Passwords do not match.  Please verify and retype.  
								              <% else %>
								                Password <%= @user.errors[:password][0] %>
								              <% end %>
								           <% end %>
	                  		</td>
								 </tr>
							     <tr><td class="var"><label>Confirm Password</label></td><td><%= f.password_field :password_confirmation, :class => "textbox340" %></td></tr>			
			        </tbody>
		          </table>
		          <hr>
							<table class="default" border="0">
 							<tbody>
 							     <tr><td colspan="2" class="heading"><h2>Contact Information</h2></td></tr>
 							     <tr>
	                                 <td class="var"><label>First Name</label></td><td><%= f.text_field :first_name, :class => "textbox340" %> </td>
	                                	  <td class="register-error-message">
		                       		<% if @user.errors[:first_name] %>
		                     				First Name cannot be blank
		                     				<% end %>
		                     		</td>
	                             </tr>
 							     <tr>
	                                 <td class="var"><label>Last Name</label></td><td><%= f.text_field :last_name, :class => "textbox340" %> </td>
										  <td class="register-error-message">
		                       		<% if @user.errors[:last_name] %>
		                     				Last Name can't be blank
		                     				<% end %>
		                     		</td>
	                             </tr>
 							     <tr><td class="var"><label>Address Line 1</label></td><td><%= f.text_field :address1, :class => "textbox340" %></td>
	                             		  <td class="register-error-message">
		                       		<% if @user.errors[:address1] %>
		                     				Address can't be blank
		                     				<% end %>
		                     		</td>
	                             </tr>
 							     <tr><td class="var"><label>Address Line 2</label></td><td><%= f.text_field :address2, :class => "textbox340" %></td></tr>
 							     <tr><td class="var"><label>City</label></td><td><%= f.text_field :city, :class => "textbox340" %></td>
	                             <td class="register-error-message">
		                       		<% if @user.errors[:city] %>
		                     				City can't be blank
		                     				<% end %>
		                     		</td>
	                             </tr>
 							     <tr><td class="var"><label>State</label></td><td>
									 <select name="user[state]">
										<option value="disabled">---------------------------</option>
										<option value="AL">Alabama</option>
										<option value="AK">Alaska</option>
										<option value="AZ">Arizona</option>
										<option value="AR">Arkansas</option>
										<option value="CA">California</option>
										<option value="CO">Colorado</option>
										<option value="CT">Connecticut</option>
										<option value="DE">Delaware</option>
										<option value="DC">District of Columbia</option>
										<option value="FL">Florida</option>
										<option value="GA">Georgia</option>
										<option value="HI">Hawaii</option>
										<option value="ID">Idaho</option>
										<option value="IL">Illinois</option>
										<option value="IN">Indiana</option>
										<option value="IA">Iowa</option>
										<option value="KS">Kansas</option>
										<option value="KY">Kentucky</option>
										<option value="LA">Louisiana</option>
										<option value="ME">Maine</option>
										<option value="MD">Maryland</option>
										<option value="MA">Massachusetts</option>
										<option value="MI">Michigan</option>
										<option value="MN">Minnesota</option>
										<option value="MS">Mississippi</option>
										<option value="MO">Missouri</option>
										<option value="MT">Montana</option>
										<option value="NE">Nebraska</option>
										<option value="NV">Nevada</option>
										<option value="NH">New Hampshire</option>
										<option value="NJ">New Jersey</option>
										<option value="NM">New Mexico</option>
										<option value="NY">New York</option>
										<option value="NC">North Carolina</option>
										<option value="ND">North Dakota</option>
										<option value="OH">Ohio</option>
										<option value="OK">Oklahoma</option>
										<option value="OR">Oregon</option>
										<option value="PA">Pennsylvania</option>
										<option value="RI">Rhode Island</option>
										<option value="SC">South Carolina</option>
										<option value="SD">South Dakota</option>
										<option value="TN">Tennessee</option>
										<option value="TX">Texas</option>
										<option value="UT">Utah</option>
										<option value="VT">Vermont</option>
										<option value="VA">Virginia</option>
										<option value="WA">Washington</option>
										<option value="WV">West Virginia</option>
										<option value="WI">Wisconsin</option>
										<option value="WY">Wyoming</option>
									</select>
								</td>
	                             	 <td class="register-error-message">
		                       		<% if @user.errors[:state] %>
		                     				Please select a state from the dropdown list
		                     				<% end %>
		                     		</td>
	                             </tr>
 							     <tr><td class="var"><label>ZIP/Postal Code</label></td><td><%= f.text_field :zipcode, :class => "textbox340" %></td>
	                                <td class="register-error-message">
		                       		<% if @user.errors[:zipcode] %>
		                     				Zipcode can't be blank
		                     				<% end %>
		                     		</td>
	                             </tr>
 							     <tr><td class="var"><label>Country</label></td><td>
										<%= f.select :country, ["United States", "---------------------------", "Canada", "Mexico"] %>
	                             	 <td class="register-error-message">
		                       		<% if @user.errors[:country] %>
		                     				Please select a country from the dropdown list
		                     				<% end %>
		                     		</td>
	                             </tr>
 							     <tr><td class="var"><label>Phone Number</label></td><td><%= f.text_field :phone_number, :class => "textbox340" %></td>
	                             	 <td class="register-error-message">
		                       		<% if @user.errors[:phone_number] %>
		                     				Phone Number can't be blank
		                     				<% end %>
		                     		</td>
	                             </tr>
 							     <tr><td></div></td>
 							     <td><div id="shortcode_device"></td>
 							     </tr>
 			        </tbody>
 		          </table>
 		          
 		          <table class="default" border="0" width="500">
              <hr>
 							<tbody>
 							     <tr><td colspan="2" class="heading"><h2>Review, accept terms &amp; Complete Signup</h2></td></tr>
 							     <tr><td class="agreement">Please review our Terms of Service and <a href="#">Sponsor Agreement</a>.</td></tr>
 							     <tr><td class="agreement"><span class="highlight"><input type="checkbox">I have reviewed and agree to all conditions outlined in the Sponsor Agreement.</span></td></tr>
 			        </tbody>
 		          </table>
 		          <hr>
		
				            <div class="footer clear">
				               <%= image_submit_tag '/images/create-login-button.png', :class => "wizard-button" %>
				            </div>
	</div>
		        </div>
	        </div>
	        <div id="cap-bottom" class="container"></div>
        </div>
       <% end -%>
</div>        
        

</div>
